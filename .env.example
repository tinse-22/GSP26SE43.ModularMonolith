# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ClassifiedAds

# ===========================================
# Application Environment
# ===========================================
DOTNET_ENVIRONMENT=Development
ASPNETCORE_ENVIRONMENT=Development

# ===========================================
# Connection Strings
# ===========================================
ConnectionStrings__Default=Host=db;Port=5432;Database=ClassifiedAds;Username=postgres;Password=your_secure_password_here

# ===========================================
# Storage Configuration
# ===========================================
Storage__Provider=Local
Storage__Local__Path=/app/storage

# ===========================================
# Messaging Configuration (RabbitMQ)
# ===========================================
Messaging__Provider=RabbitMQ
Messaging__RabbitMQ__HostName=rabbitmq

# ===========================================
# Notification Module Configuration
# ===========================================
# Email Settings
Notification__Email__Provider=SmtpClient
Notification__Email__SmtpClient__Host=mailhog
Notification__Email__SmtpClient__Port=1025

# SMS Settings (Twilio - Fill in your credentials)
Notification__Sms__Provider=Fake
Notification__Sms__Twilio__AccountSId=your_twilio_account_sid
Notification__Sms__Twilio__AuthToken=your_twilio_auth_token
Notification__Sms__Twilio__FromNumber=your_twilio_phone_number

# Web Notification Settings
Notification__Web__Provider=Fake
Notification__Web__SignalR__Endpoint=http://notificationserver

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=your_redis_password_if_needed
